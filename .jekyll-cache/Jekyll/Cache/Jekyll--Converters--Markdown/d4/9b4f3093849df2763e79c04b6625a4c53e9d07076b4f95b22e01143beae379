  <div class="code"><pre><span class="line-numbers"><a href="#n1" name="n1">1</a></span><span style="color:#F00;background-color:#FAA">&lt;</span>%= link_to &quot;Destroy&quot;, article_path(article), method: :delete %<span style="color:#F00;background-color:#FAA">&gt;</span>
</pre></div>
