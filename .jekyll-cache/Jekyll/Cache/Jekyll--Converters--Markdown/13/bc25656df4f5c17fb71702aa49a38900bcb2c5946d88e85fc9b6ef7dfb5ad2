<span class="line-numbers"> <a href="#n3" name="n3">3</a></span>rake <span style="color:#606">db</span>:drop                <span style="color:#777"># Drops the database from DATABASE_URL or confi...</span>
<span class="line-numbers"> <a href="#n4" name="n4">4</a></span>rake <span style="color:#606">db</span>:<span style="color:#606">environment</span>:set     <span style="color:#777"># Set the environment value for the database</span>
<span class="line-numbers"> <a href="#n5" name="n5">5</a></span>rake <span style="color:#606">db</span>:<span style="color:#606">fixtures</span>:load       <span style="color:#777"># Loads fixtures into the current environment's...</span>
<span class="line-numbers"> <a href="#n6" name="n6">6</a></span>rake <span style="color:#606">db</span>:migrate             <span style="color:#777"># Migrate the database (options: VERSION=x, VER...</span>
<span class="line-numbers"> <a href="#n7" name="n7">7</a></span>rake <span style="color:#606">db</span>:<span style="color:#606">migrate</span>:status      <span style="color:#777"># Display status of migrations</span>
<span class="line-numbers"> <a href="#n8" name="n8">8</a></span>rake <span style="color:#606">db</span>:rollback            <span style="color:#777"># Rolls the schema back to the previous version...</span>
<span class="line-numbers"> <a href="#n9" name="n9">9</a></span>rake <span style="color:#606">db</span>:<span style="color:#606">schema</span>:<span style="color:#606">cache</span>:clear  <span style="color:#777"># Clears a db/schema_cache.yml file</span>
<span class="line-numbers"><strong><a href="#n10" name="n10">10</a></strong></span>rake <span style="color:#606">db</span>:<span style="color:#606">schema</span>:<span style="color:#606">cache</span>:dump   <span style="color:#777"># Creates a db/schema_cache.yml file</span>
<span class="line-numbers"><a href="#n11" name="n11">11</a></span>rake <span style="color:#606">db</span>:<span style="color:#606">schema</span>:dump         <span style="color:#777"># Creates a db/schema.rb file that is portable ...</span>
<span class="line-numbers"><a href="#n12" name="n12">12</a></span>rake <span style="color:#606">db</span>:<span style="color:#606">schema</span>:load         <span style="color:#777"># Loads a schema.rb file into the database</span>
<span class="line-numbers"><a href="#n13" name="n13">13</a></span>rake <span style="color:#606">db</span>:seed                <span style="color:#777"># Loads the seed data from db/seeds.rb</span>
