<span class="line-numbers"><strong><a href="#n10" name="n10">10</a></strong></span>db.execute <span style="background-color:hsla(0,100%,50%,0.05)"><span style="color:#710">&quot;</span><span style="color:#D20">SELECT * FROM Cars</span><span style="color:#710">&quot;</span></span> <span style="color:#080;font-weight:bold">do</span> |car|
