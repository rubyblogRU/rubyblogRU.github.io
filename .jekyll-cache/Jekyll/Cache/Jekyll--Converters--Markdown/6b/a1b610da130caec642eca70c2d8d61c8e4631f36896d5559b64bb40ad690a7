  <div class="code"><pre><span class="line-numbers"><a href="#n1" name="n1">1</a></span><span style="color:#B06;font-weight:bold">SELECT</span> * <span style="color:#080;font-weight:bold">FROM</span> Orders <span style="color:#080;font-weight:bold">WHERE</span> OrderTotal <span style="color:#080;font-weight:bold">BETWEEN</span> <span style="color:#00D">100</span> <span style="color:#080;font-weight:bold">AND</span> <span style="color:#00D">200</span>
</pre></div>
</div>
