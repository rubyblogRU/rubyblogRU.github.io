<span class="line-numbers"> <a href="#n2" name="n2">2</a></span>
<span class="line-numbers"> <a href="#n3" name="n3">3</a></span>  attr_reader <span style="color:#A60">:model</span>
<span class="line-numbers"> <a href="#n4" name="n4">4</a></span>  attr_reader <span style="color:#A60">:speed</span>
<span class="line-numbers"> <a href="#n5" name="n5">5</a></span>  attr_reader <span style="color:#A60">:altitude</span>
<span class="line-numbers"> <a href="#n6" name="n6">6</a></span>
<span class="line-numbers"> <a href="#n7" name="n7">7</a></span>  <span style="color:#080;font-weight:bold">def</span> <span style="color:#06B;font-weight:bold">initialize</span>(model)
<span class="line-numbers"> <a href="#n8" name="n8">8</a></span>    <span style="color:#33B">@model</span> = model
<span class="line-numbers"> <a href="#n9" name="n9">9</a></span>    <span style="color:#33B">@speed</span> = <span style="color:#00D">0</span>
