<span class="line-numbers"><a href="#n14" name="n14">14</a></span>    <span style="color:#33B">@speed</span> = <span style="color:#00D">800</span>
<span class="line-numbers"><a href="#n15" name="n15">15</a></span>    <span style="color:#33B">@altitude</span> = <span style="color:#00D">10000</span>
<span class="line-numbers"><a href="#n16" name="n16">16</a></span>  <span style="color:#080;font-weight:bold">end</span>
