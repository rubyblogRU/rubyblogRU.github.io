<span class="line-numbers"> <a href="#n6" name="n6">6</a></span><span style="color:#777"># ИЛИ</span>
<span class="line-numbers"> <a href="#n7" name="n7">7</a></span><span style="color:#080;font-weight:bold">if</span> a &gt; <span style="color:#00D">1</span> || b &lt; <span style="color:#00D">3</span>
<span class="line-numbers"> <a href="#n8" name="n8">8</a></span>  puts <span style="background-color:hsla(0,100%,50%,0.05)"><span style="color:#710">&quot;</span><span style="color:#D20">Foo!</span><span style="color:#710">&quot;</span></span>
